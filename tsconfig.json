{
  "compilerOptions": {
    "target": "es2019",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "__tests__", "@types", "examples"]
}
